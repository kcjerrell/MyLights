<Application x:Class="MyLights.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyLights"
             xmlns:util="clr-namespace:MyLights.Util">

    <Application.StartupUri>LightPaletteWindow.xaml</Application.StartupUri>

    <Application.Resources>
        <util:Locator x:Key="Locator"/>
        <util:BoolToObjectsConverter x:Key="PowerCircleColorConverter" FalseValue="Red" TrueValue="#FF5DFF00" />
        <util:BrushCache x:Key="BrushCache"/>
    </Application.Resources>
</Application>
