<Window x:Class="MyLights.Windows.Scratch2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctrl="clr-namespace:MyLights.Controls"
        xmlns:local="clr-namespace:MyLights.Windows"
        mc:Ignorable="d"
        Title="Scratch2" Height="450" Width="800">
    <Grid>
      
    <ctrl:EditLabel x:Name="EditLabel" Background="#44222222" Text="Hi Try To Rename Me" FontSize="36"
                     HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="60"/>

    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding IsMouseCaptured ,ElementName=EditLabel}"
               Margin="2"/>
    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding OtherMouseOver ,ElementName=EditLabel}"
               Margin="2,2,2,30"/>
    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="{Binding IsMouseOver, ElementName=EditLabel}"
               Margin="2,2,2,60"/>

    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="{Binding Text, ElementName=EditLabel}"/>

  </Grid>
</Window>
