<Popup x:Class="MyLights.Views.ColorPickerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLights.Views"
        mc:Ignorable="d" Height="300" Width="260" >
  <Border BorderThickness="2" BorderBrush="Black" Background="#FFCCCCCC">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <local:ColorPicker x:Name="colorPicker" Grid.Row="0"/>
      <Button Grid.Row="1" Content="Okay" Click="Button_Click" Margin="8,0,8,8"/>
    </Grid>
  </Border>
</Popup>
